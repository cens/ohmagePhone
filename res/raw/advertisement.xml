<?xml version="1.0" encoding="UTF-8"?>
<campaign>
  <campaignUrn>urn:campaign:ca:lausd:Addams_HS:CS101:Fall:2011:Advertisement</campaignUrn>
  <campaignName>Advertisement</campaignName>
  <serverUrl>https://dev1.andwellness.org/</serverUrl>
  
  <surveys>
    <survey>
      <id>AdvertisingMedia</id>
      <title>Advertising Media</title>
      <description>Observe and collect forms of advertising media in the community.</description>
      <submitText>Advertising Media</submitText>
      <showSummary>false</showSummary>
      <editSummary>false</editSummary>
      <summaryText>Observe and collect forms of advertising media in the community</summaryText>
      <anytime>true</anytime>
    
      <contentList>
        <prompt>
          <id>AdPhoto</id>
          <displayType>event</displayType>
          <displayLabel>Advertisement Photo</displayLabel>
          <promptText>Take a picture</promptText>
          <abbreviatedText>Take a picture</abbreviatedText>
          <promptType>photo</promptType>
          <properties>
            <property>
              <key>res</key>
              <label>720</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>

        <prompt>
          <id>AdvertisementType</id>
          <displayType>event</displayType>
          <displayLabel>Advertisement Type</displayLabel>
          <promptText>Advertisement type?</promptText>
          <abbreviatedText>Advertisement type</abbreviatedText>
          <promptType>single_choice</promptType>
          <properties>
            <property>
              <key>0</key>
              <label>Billboard</label>
            </property>
            <property>
              <key>1</key>
              <label>Digital Display</label>
            </property>
            <property>
              <key>2</key>
              <label>Poster</label>
            </property>
            <property>
              <key>3</key>
              <label>Magazine</label>
            </property>
            <property>
              <key>4</key>
              <label>Bus</label>
            </property>
            <property>
              <key>5</key>
              <label>Other</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>

        <prompt>
          <id>Product</id>
          <displayType>event</displayType>
          <displayLabel>Product</displayLabel>
          <promptText>Product?</promptText>
          <abbreviatedText>Product?</abbreviatedText>
          <promptType>text</promptType>
          <properties>
            <property>
              <key>min</key>
              <label>1</label>
            </property>
            <property>
              <key>max</key>
              <label>256</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>
      
        <prompt>
          <id>ProductType</id>
          <displayType>category</displayType>
          <displayLabel>Product Type</displayLabel>
          <promptText>Product type?</promptText>
          <abbreviatedText>Product type</abbreviatedText>
          <promptType>single_choice</promptType>
          <properties>
            <property>
              <key>0</key>
              <label>Food</label>
            </property>
            <property>
              <key>1</key>
              <label>Clothes</label>
            </property>
            <property>
              <key>2</key>
              <label>Vice</label>
            </property>
            <property>
              <key>3</key>
              <label>Electronics</label>
            </property>
            <property>
              <key>4</key>
              <label>Entertainment</label>
            </property>
            <property>
              <key>5</key>
              <label>Home</label>
            </property>
            <property>
              <key>6</key>
              <label>Beauty</label>
            </property>
            <property>
              <key>7</key>
              <label>Health</label>
            </property>
            <property>
              <key>8</key>
              <label>Transportation</label>
            </property>
            <property>
              <key>9</key>
              <label>Other</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>

        <prompt>
          <id>TargetAudience</id>
          <displayType>event</displayType>
          <displayLabel>TargetAudience</displayLabel>
          <promptText>TargetAudience?</promptText>
          <abbreviatedText>Target Audience</abbreviatedText>
          <promptType>text</promptType>
          <properties>
            <property>
              <key>min</key>
              <label>1</label>
            </property>
            <property>
              <key>max</key>
              <label>256</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>

        <prompt>
          <id>DesiredLevel</id>
          <displayType>measurement</displayType>
          <displayLabel>Desired Level</displayLabel>
          <promptText>How much do you want to have this [0-4]?</promptText>
          <abbreviatedText>How much do you want to have this?</abbreviatedText>
          <promptType>number</promptType>
           <properties>
            <property>
              <key>min</key>
              <label>0</label>
            </property>
            <property>
              <key>max</key>
              <label>4</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>

        <prompt>
          <id>Feeling</id>
          <displayType>event</displayType>
          <displayLabel>Feeling</displayLabel>
          <promptText>This ad makes me feel...</promptText>
          <abbreviatedText>This ad makes me feel...</abbreviatedText>
          <promptType>text</promptType>
          <properties>
            <property>
              <key>min</key>
              <label>1</label>
            </property>
            <property>
              <key>max</key>
              <label>256</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>
        
      </contentList>
    
    </survey>
  </surveys>
</campaign>